#!/bin/bash

# fail hard and fast even on pipelines
set -eo pipefail

/run.sh

echo "Setting up permissions"
sudo chown odoo:odoo -R /opt/dev/workspace
sudo chown odoo:odoo -R /opt/odoo/sources
sudo chown odoo:odoo -R /opt/odoo/additional_addons

echo "Starting Eclipse"
cd /opt/dev/workspace
/opt/dev/eclipse/eclipse -data /opt/dev/workspace -perspective org.python.pydev.ui.PythonPerspective

